<%- include('header'); -%>
<!-- Product section-->
<section class="py-5">
    <div class="container px-4 px-lg-5 my-5">
        <div class="row gx-4 gx-lg-5 align-items-center">
            <div class="col-md-6"><img class="card-img-top mb-5 mb-md-0" src="/img/items/<%= detail_product.hinh %>" alt="..." /></div>
            <div class="col-md-6">
                <div class="small mb-1">Loại: BST-498</div>
                <h1 class="display-5 fw-bolder"><%= detail_product.ten_sp %></h1>
                <div class="fs-5 mb-5">
                    <span class="text-decoration-line-through"><%= detail_product.gia %> VNĐ</span>
                    <span style="color: #088178;"><%= detail_product.giam_gia %> VNĐ</span>
                </div>
                <p class="lead"><%= detail_product.mo_ta %></p>
                <div class="d-flex">
                    <input class="form-control text-center me-3" id="inputQuantity" type="num" value="1" style="max-width: 3rem" />
                    <a href="/cart/addCart/<%= detail_product.id %>" class="btn btn-outline-dark flex-shrink-0" type="button">
                        <i class="bi-cart-fill me-1"></i>
                        Thêm Vào Giỏ Hàng
                    </a>
                </div>
            </div>
        </div>
    </div>
</section>
<!-- Related items section-->
<section class="py-5 bg-light">
    <div class="container px-4 px-lg-5 mt-5">
        <h2 class="fw-bolder mb-4">Sản Phẩm Liên Quan</h2>
        <div class="row gx-4 gx-lg-5 row-cols-2 row-cols-md-3 row-cols-xl-4 justify-content-center">
            <% for (var i = 0; i < 4 ; i++) { %>
                
                    <div class="col-3 ms-0" >
                        <div class="card" style="width: 14rem; height: auto;">
                            <a href="/products/product_detail/<%= relatedProducts[i].id %>"><img src="/img/items/<%= relatedProducts[i].hinh %>" class="card-img-top" alt="..." height="280px"></a>
                            <div class="card-body">
                                <a href="/products/product_detail/<%= relatedProducts[i].id %>"><h5 class="card-title" style="font-size: 18px;"><%= relatedProducts[i].ten_sp %></h5></a>
                                <div class="price">
                                    <p class="card-text text-decoration-line-through fw-bold" style="font-size: 14px;"><%= relatedProducts[i].gia %> VNĐ</p>
                                    <p class="card-text color-price fw-bold" style="font-size: 14px;"><%= relatedProducts[i].giam_gia %> VNĐ</p>
                                </div>
                                <div class="star">
                                    <i class="fas fa-star"></i>
                                    <i class="fas fa-star"></i>
                                    <i class="fas fa-star"></i>
                                    <i class="fas fa-star"></i>
                                    <i class="fas fa-star"></i>
                                </div>
                                <button type="submit" name="cart" class="cart"><i class="fal fa-shopping-cart"></i></button>
                            </div>
                        </div>
                    </div>
            <% } %>
        </div>
    </div>
</section>
<!-- Footer-->
<footer class="py-5 bg-dark">
    <div class="container"><p class="m-0 text-center text-white">Copyright &copy; Your Website 2023</p></div>
</footer>
<!-- Bootstrap core JS-->
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.bundle.min.js"></script>
<!-- Core theme JS-->
</body>
</html>