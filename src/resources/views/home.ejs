            <% for (var i = 0; i < 8 ; i++) { %>
            <div class="col-3 ms-0   " >
                <div class="card hover-zoom " style="width: 18rem;">
                        <a href="/products/product_detail/<%= products[i].id %>"><img src="/img/items/<%= products[i].hinh %>" class="card-img-top" alt="..." height="391px"></a>
